<?xml version="1.0" encoding="utf-8"?>
<!-- Simplified drawable for Android 12+ splash screen (background is handled separately via windowSplashScreenBackground) -->
<!-- Logo sized to 60dp (scales 120x120px image down to 60x60) - sits directly on black background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="60dp"
        android:height="60dp"
        android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash_android"/>
    </item>
</layer-list>
