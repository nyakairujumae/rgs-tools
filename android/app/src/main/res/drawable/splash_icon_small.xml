<?xml version="1.0" encoding="utf-8"?>
<!-- Simplified drawable for Android 12+ splash screen (background is handled separately via windowSplashScreenBackground) -->
<!-- Logo sized to 50dp - sits directly on black background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="50dp"
        android:height="50dp"
        android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash_android"/>
    </item>
</layer-list>
