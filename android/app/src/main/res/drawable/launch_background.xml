<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black background - must be first item for immediate display on first install -->
    <item>
        <color android:color="@color/launch_background_color"/>
    </item>
    <!-- Centered logo sized to 50dp - sits directly on black background -->
    <!-- Using bitmap directly for faster loading on first install -->
    <item
        android:width="50dp"
        android:height="50dp"
        android:gravity="center">
        <bitmap
            android:src="@drawable/splash_android"
            android:gravity="center"/>
    </item>
</layer-list>
