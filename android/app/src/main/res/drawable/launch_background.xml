<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black background -->
    <item>
        <color android:color="@color/launch_background_color"/>
    </item>
    <!-- Centered logo sized to match iOS (60dp = iOS 60 points) -->
    <item
        android:width="60dp"
        android:height="60dp"
        android:gravity="center">
        <bitmap 
            android:gravity="center" 
            android:src="@drawable/splash_android"/>
    </item>
</layer-list>
